<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/holo_red_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="types_pokemon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:fontFamily">@font/pokemon_solid</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="pokemon_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/holo_red_light</item>
        <item name="android:elevation">8dp</item>
    </style>
    <style name="AppToolbarTheme">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>
    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

<style name="SearchPokemonHint" parent="Widget.MaterialComponents.TextView">
    <item name="android:textSize">18sp</item>
    <item name="backgroundColor">@android:color/transparent</item>
</style>
</resources>
